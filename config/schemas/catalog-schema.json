{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "aws-cost-builder/catalog-entry",
    "title": "ServiceCatalogEntry",
    "description": "Schema for a single service catalog entry",
    "type": "object",
    "required": [
        "service_name",
        "search_term",
        "calculator_page_title",
        "supported_regions",
        "dimensions"
    ],
    "additionalProperties": false,
    "properties": {
        "service_name": {
            "type": "string",
            "minLength": 1
        },
        "search_term": {
            "type": "string",
            "minLength": 1
        },
        "calculator_page_title": {
            "type": "string",
            "minLength": 1
        },
        "supported_regions": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "dimensions": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/CatalogDimension"
            }
        }
    },
    "definitions": {
        "CatalogDimension": {
            "type": "object",
            "required": [
                "key",
                "field_type",
                "default_value",
                "required"
            ],
            "additionalProperties": false,
            "properties": {
                "key": {
                    "type": "string",
                    "minLength": 1
                },
                "field_type": {
                    "type": "string",
                    "enum": [
                        "NUMBER",
                        "TEXT",
                        "SELECT",
                        "COMBOBOX",
                        "TOGGLE",
                        "RADIO"
                    ]
                },
                "default_value": {
                    "type": [
                        "string",
                        "number",
                        "boolean",
                        "null"
                    ]
                },
                "required": {
                    "type": "boolean"
                },
                "options": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "type": "string"
                    }
                },
                "unit": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "unit_sibling": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        }
    }
}